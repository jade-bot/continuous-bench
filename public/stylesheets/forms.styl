
radius = 3px
shadow = rgba(black, .1)
highlight = rgba(82,168,236,.8)

select
textarea
input[type=text]
input[type=password]
  width: 210px
  margin: 0
  padding: 4px 5px
  font-size: 12px
  color: dark
  border: 1px solid #ccc
  border-radius: radius

input[type=text]
input[type=password]
  box-shadow: inset 0 1px 3px rgba(black,.1)

button
a.button
input[type=text]
input[type=submit]
input[type=button]
  transition: border 200ms, box-shadow 200ms
  &:focus
    outline: none
    border-color: highlight
    box-shadow: inset 0 1px 3px shadow, 0 0 8px rgba(highlight, .4)

button
a.button
input[type=submit]
input[type=button]
  from = #fff
  to = #e6e6e6
  margin: 0 5px
  background: #e6e6e6
  background: linear-gradient(top, 25% from, to);
  padding: 5px 10px
  border-radius: radius
  border: 1px solid border = #ccc
  border-bottom: 1px solid darken(border, 5%)
  color: #666
  &:hover
    color: #333
    by = 30%
    cursor: pointer
    background: linear-gradient(top, 25% lighten(from, by), lighten(to, by))
  &:active
    color: #333
    transition: none
    box-shadow: inset 0 1px 3px shadow
