
select
textarea
input[type=text]
input[type=password]
  margin: 0
  padding: 4px 5px
  font-size: 12px
  color: dark
  border: 1px solid border-color
  border-radius: radius

input[type=text]
input[type=password]
  box-shadow: inset 0 1px 3px rgba(black,.1)

button
a.button
input[type=text]
input[type=submit]
input[type=button]
  transition: border 200ms, box-shadow 200ms
  &:focus
    outline: none
    border-color: highlight
    box-shadow: inset 0 1px 3px shadow, 0 0 8px rgba(highlight, .4)
  &:hover
    text-decoration: none

button
a.button
input[type=submit]
input[type=button]
  from = #fff
  to = #e6e6e6
  margin: 0 5px
  background: #e6e6e6
  background: linear-gradient(top, 25% from, to);
  padding: 5px 15px
  border-radius: radius
  border: 1px solid border-color
  border-bottom: 1px solid darken(border-color, 5%)
  color: fg = #666
  cursor: pointer
  &:hover
    color: #333
    by = 30%
    background: linear-gradient(top, 25% lighten(from, by), lighten(to, by))
  &:active
    color: #333
    transition: none
    box-shadow: inset 0 1px 3px shadow
  .dark &
    color = lighten(dark, 20%)
    light = lighten(color, 10%)
    color: rgba(white, .85)
    border: dark
    border-top: 1px solid light
    border-bottom: 1px solid dark
    border-radius: 5px
    box-shadow: 0 -1px 0 0 dark, 0 1px 0 0 darken(color, 20%)
    background: linear-gradient(top, color, darken(color, 40%))
    &:active
      border-top: 1px solid darken(light, 50%)
      border-bottom: 1px solid darken(dark, 20%)
      background: linear-gradient(bottom, 25% darken(color, 40%), darken(color, 80%))
    &:hover
      color: white
