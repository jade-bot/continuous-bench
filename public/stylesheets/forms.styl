
select
textarea
input[type=text]
input[type=password]
  width: 210px
  margin: 0
  padding: 4px
  font-size: 13px
  color: dark
  border: 1px solid #ccc
  border-radius: 3px

input[type=text]
input[type=password]
  transition: border 200ms, box-shadow 200ms
  box-shadow: inset 0 1px 3px rgba(black,.1)
  &:focus
    outline: none
    border-color: rgba(82,168,236,.8)
    box-shadow: inset 0 1px 3px rgba(0,0,0,.1), 0 0 8px rgba(82,168,236,.6)
