
@import 'mixins'

radius = 3px
shadow = rgba(black, .1)
highlight = rgba(82,168,236,.8)
border-color = #ccc
dark = #161616
light = #eee

html
body
  margin: 1px
  height: 100%
  background: #f2f2f2

body
  padding: 30px 50px
  font: 14px/1.6 "Helvetica Neue", Helvetica, Arial, sans-serif
  background: linear-gradient(top, #fff, #f2f2f2)
  color: dark

h1, h2, h3
  letter-spacing: 1px
  font-weight: normal

a
  color: #00B7FF
  text-decoration: none
  &:hover
    text-decoration: underline

#commit
  margin: 25px 0

h1
  font-smoothing: antialiased
  em
    padding: 0 5px
    color: #ddd
  .project
    color: #888

pre
  color: lighten(dark, 50%)
  font: 12px monospace
  padding: 5px 15px

@import 'forms'
@import 'overlay'
@import 'dialogs'